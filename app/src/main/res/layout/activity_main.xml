<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:context=".MainActivity"

        android:columnCount="4"

        android:orientation="horizontal"

        android:theme="@style/BackgroundColour">

    <TextView
            android:theme="@style/TextView"
            android:layout_columnSpan="3"
            android:text=""
            android:textSize="20pt"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display"
            android:layout_margin="5dp"/>

    <Button
            android:layout_column="3"
            android:id="@+id/divideButton"
            android:onClick="onClickNumber"
            android:text="@string/divide"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberOne"
            android:id="@+id/oneButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberTwo"
            android:id="@+id/twoButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberThree"
            android:id="@+id/threeButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/multiply"
            android:id="@+id/multipleButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberFour"
            android:id="@+id/fourButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberFive"
            android:id="@+id/fiveButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberSix"
            android:id="@+id/sixButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/subtract"
            android:id="@+id/subtractButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberSeven"
            android:id="@+id/sevenButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberEight"
            android:id="@+id/eightButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button android:text="@string/numberNine"
            android:id="@+id/nineButton"
            android:onClick="onClickNumber"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>


    <Button
            android:layout_gravity="fill_vertical"
            android:layout_rowSpan="2"
            android:id="@+id/addButton"
            android:onClick="onClickNumber"
            android:text="@string/add"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:id="@+id/zeroButton"
            android:onClick="onClickNumber"
            android:text="@string/numberZero"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>


    <Button
            android:layout_columnSpan="1"
            android:id="@+id/clearButton"
            android:onClick="onClickNumber"
            android:text="@string/cancel"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>

    <Button
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/equalsButton"
            android:onClick="onClickNumber"
            android:text="@string/equals"
            android:theme="@style/Button.Grey"
            android:layout_margin="5dp"/>


</GridLayout>